<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    <File name="LogToFile" fileName="${catalina.home}/logs/poma.log">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </File>
    </Appenders>
    <Loggers>
        <!-- avoid duplicated logs with additivity=false -->
        <Logger additivity="false" name="infologger" level="INFO">
            <AppenderRef ref="LogToFile"/>
        </Logger>
        <Logger  name="tracelogger" level="TRACE">
            <AppenderRef ref="LogToFile"/>
        </Logger>
        <Logger  name="errorlogger" level="ERROR">
            <AppenderRef ref="LogToFile"/>
        </Logger>
        <Logger  name="debuglogger" level="DEBUG">
            <AppenderRef ref="LogToFile"/>
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="LogToFile"/>
        </Root>
    </Loggers>
</Configuration>
